---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const { page } = Astro.props;
---

<!DOCTYPE html>
<html lang="he" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>מריאנה רחמיאל</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;700;900&family=Open+Sans&family=Varela+Round&display=swap"
      rel="stylesheet"
    />

    <!-- Flowbite  -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css"
      rel="stylesheet"
    />

    <!-- FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body
    style="background: url(/bg.png) left top repeat;"
    class="scroll-smooth text-center font-varela transition-all"
  >
    <Navbar />
    <slot />
    <Footer />
    <!-- Flowbite -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"
    ></script>
  </body>
</html>
