---
import Layout from "../layouts/layout.astro";
import Contact from "../components/Contact.astro";
---

<Layout>
  <main class="relative pb-7">
    <div
      class="flex h-[200px] w-full flex-col items-center justify-center bg-secondary-300"
    >
      <h1
        class="font-heebo text-4xl font-bold text-white sm:text-5xl lg:text-6xl"
      >
        צרו קשר
      </h1>
    </div>
    <section
      class="mx-auto flex flex-col justify-between px-4 py-10 md:flex-row xl:w-3/5"
    >
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d846.1974342551445!2d34.80366055322916!3d31.966600483750344!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1502b4472267597d%3A0x3188011b66275400!2z15TXqNem15wgNjMsINeo15DXqdeV158g15zXpteZ15XXnw!5e0!3m2!1siw!2sil!4v1681296038031!5m2!1siw!2sil"
        class="order-1 mr-auto h-[260px] w-full border-0 md:order-3 lg:w-2/3"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
      <ol class="order-2 flex flex-col items-start justify-between gap-2 py-4">
        <li class="flex w-full flex-row items-stretch gap-3">
          <div
            class="w-fit border-4 border-slate-500 p-3 text-[30px] text-slate-600"
          >
            <i class="fa-location-dot fa-solid relative block h-[1em] w-[1em]"
            ></i>
          </div>
          <div class="flex flex-col items-start justify-between pb-2">
            <h1 class="font-varela font-bold">כתובת:</h1>
            <h3>הרצל 63 (בית רוטמן), ראשון לציון</h3>
          </div>
        </li>
        <li class="flex w-full flex-row items-stretch gap-3">
          <div
            class="w-fit border-4 border-slate-500 p-3 text-[30px] text-slate-600"
          >
            <i class="fa-phone fa-solid relative block h-[1em] w-[1em]"></i>
          </div>
          <div class="flex flex-col items-start justify-between pb-2">
            <h1 class="font-varela font-bold">טלפון:</h1>
            <h3>08-535-8337</h3>
          </div>
        </li>
        <li class="flex w-full flex-row items-stretch gap-3">
          <div
            class="w-fit border-4 border-slate-500 p-3 text-[30px] text-slate-600"
          >
            <i class="fa-envelope fa-solid relative block h-[1em] w-[1em]"></i>
          </div>
          <div class="flex flex-col items-start justify-between pb-2">
            <h1 class="font-varela font-bold">מייל:</h1>
            <h3>prof.rachmiel@gmail.com</h3>
          </div>
        </li>
      </ol>
    </section>
    <Contact />
  </main>
</Layout>
