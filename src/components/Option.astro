---
const { icon } = Astro.props;
const { link } = Astro.props;
---

<a
  href={link}
  class="max-w-sm cursor-pointer rounded-lg border border-gray-200 bg-white py-4 shadow transition-all hover:scale-105 hover:bg-gray-200 dark:border-gray-700 dark:bg-gray-800"
>
  <i class={`fa-solid fa-${icon} text-[3em] text-gray-500`}></i>

  <h5
    class="mb-2 px-5 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
  >
    <slot />
  </h5>
</a>
